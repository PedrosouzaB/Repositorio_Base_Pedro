from flask import Flask, jsonify, request

# Inicializa o aplicativo Flask
app = Flask(__name__)

# Rota principal (GET)
@app.route('/')
def home():
    return jsonify({"message": "Bem-vindo ao backend básico em Python!"})

# Rota para obter dados (GET)
@app.route('/api/data', methods=['GET'])
def get_data():
    data = {
        "id": 1,
        "name": "Exemplo",
        "description": "Este é um exemplo de API em Flask."
    }
    return jsonify(data)

# Rota para enviar dados (POST)
@app.route('/api/data', methods=['POST'])
def post_data():
    # Obtém os dados enviados no corpo da requisição
    data = request.get_json()
    if not data:
        return jsonify({"error": "Nenhum dado enviado!"}), 400

    # Retorna os dados recebidos como resposta
    return jsonify({"received_data": data}), 201

# Executa o servidor
if __name__ == '__main__':
    app.run(debug=True)
